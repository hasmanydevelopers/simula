<div class="jumbotron">
    <h2>Editar sesión como terapeuta</h2>

    <%= form_for @therapy_session, :url => update_therapy_session_path do |f| %>
      <%= f.hidden_field :therapist_id, :value => current_user.id %>
      <%= f.hidden_field :creator_id, :value => current_user.id %>
      <%= f.hidden_field :state, :value => :pending %>

      <div><%= f.label "Fecha" %><br />
      <%= f.date_field :event_date %></div>

      <div><%= f.label "Paciente" %><br />
      <%= f.collection_select :patient_id, @posible_patients, :id, :complete_name, :prompt => true %></div>

      <div><%= f.label :supervisor_id %><br />
      <%= f.collection_select :supervisor_id, @posible_supervisors, :id, :complete_name, :prompt => true %></div>

      <div class="marg-sup-btn">
        <%= f.submit "Guardar", :class => 'btn btn-lg btn-success' %>
        <%= link_to "Eliminar", destroy_therapy_session_path(@therapy_session.id), :confirm => "¿Estás seguro de querer eliminar esta sesión de terapia?", :method => :delete, :class => 'btn btn-lg btn-success', :id => "destroy-btn" %>
      </div>
    <% end %>

    <div class="marg-sup-btn">
        <%= link_to "Atrás", "/" %>
    </div>
</div>
